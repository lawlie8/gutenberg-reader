<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp">
    <Appenders>
        <File name="MyFile" fileName="logs/log.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
        <Loggers>
            <Logger name="com.lawlie8.*" level="INFO"
                    additivity="false">
                <Appender-ref ref="CONSOLE" level="DEBUG" />
            </Logger>
            <Logger name="org.lawlie8.*" level="INFO"
                    additivity="false">
                <Appender-ref ref="CONSOLE" level="DEBUG" />
            </Logger>

    </Loggers>
</Configuration>